@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS Screen</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/Content/select2.min.css" />
    @*<link rel="stylesheet" href="~/Content/print.min.css" />*@
    <link rel="stylesheet" href="~/Content/waitMe.min.css" />
    <link rel="stylesheet" href="~/Content/sweetalert2.min.css" />
    @*<link rel="stylesheet" href="~/Content/posscreen.css" />*@
    <style>
        .nav-pills .nav-link {
            text-align: left;
            border-radius: 0.25rem;
        }

        .nav-pills .nav-link.active {
            background-color: #0d6efd;
        }
        td.wrap {
            word-break: break-all; /* breaks anywhere */
            overflow-wrap: break-word; /* ensures wrapping */
        }
        /* Chrome, Safari, Edge, Opera */
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }

    </style>

</head>
<body id="full-container"  style="overflow-x: hidden">
    <div class="row" id="main-container" x-data="posSystem()" style="overflow-x: hidden">
        <div class="col-md-12">
            <input x-ref="compid" value="@ViewBag.compid" type="hidden" />
            <input x-ref="sessionid" value="@ViewBag.sessionid" type="hidden" />
            <input x-ref="outletid" value="@ViewBag.outletid" type="hidden" />
            <input x-ref="vtype" value="@ViewBag.vtype" type="hidden" />
            <input x-ref="docno" value="@ViewBag.docno" type="hidden" />
            <input x-ref="netamt" value="@ViewBag.netamt" type="hidden" />

            <div class="card">
                <div class="card-header bg-light">
                    <div class="row">

                        <div class="col-md-3">

                            <div class="hstack gap-3" style="float: left;">
                                <div>
                                    <span class="fw-bold fs-5" style="color:#0073AA;"> Outstanding Amt:</span>
                                    <br />
                                    <span class="text-info fs-5 fw-bold" x-text="formatNum(outstandingAmt)">

                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <span class="fs-5 fw-bold" style="color:#0073AA;"> Paid Amt:</span>
                            <br />
                            <span class="text-primary fs-5 fw-bold" x-text="formatNum(totalPaid)"></span>
                        </div>
                        <div class="col-md-3">
                            <span class="fs-5 fw-bold" style="color:#0073AA;"> Sale Amt:</span>
                            <br />
                            <span class="text-success fs-5 fw-bold" x-text="formatNum(totalInvoiceAmt)"></span>
                        </div>

                        <div class="col-md-3">
                            <div class="hstack gap-1" style="float: right;">
                                <button class="btn" @@click="saveTxn" :disabled="isDisabled">
                                    <span class="spinner-border spinner-border-sm" role="status" :hidden="!isDisabled" aria-hidden="true"></span>
                                    <svg :hidden="isDisabled" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                                        <path d="M11 2H9v3h2z" />
                                        <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
                                    </svg>
                                    <br />
                                    Save
                                </button>
                                <button class="btn" @@click="closePopup">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                                    </svg>
                                    <br />
                                    Close
                                </button>
                            </div>

                        </div>
                    </div>
                    </div>
                <div class="card-body" style="min-height: 400px;">
                    <div class="row">
                        <!-- Vertical Tabs Navigation -->
                        <div class="col-md-3">
                            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                <template x-for="(paymentMode, index) in paymentModes" :key="index">
                                    <button class="nav-link fw-bold" :class="{ 'active' : index == 0}" id="v-pills-home-tab" data-bs-toggle="pill" :data-bs-target="'#v-pills-home'+index" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true" x-text="paymentMode.PaymentType" >
                                        
                                    </button>
                                </template>
                            </div>
                        </div>

                        <!-- Tab Content -->
                        <div class="col-md-9">
                            <div class="tab-content" id="v-pills-tabContent">
                                <template x-for="(paymentMode, index) in paymentModes" :key="index">
                                    <div class="tab-pane fade" :class="{'show active': index == 0}" :id="'v-pills-home'+index" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                        @*<h3 x-text="paymentMode.PaymentType"></h3>*@
                                        <div class="vstack gap-1">
                                            <div class="input-group flex-nowrap" x-show="paymentMode.ShowBank && paymentMode.TypeSelect == paymentTypes.Bank">
                                                <span class="input-group-text" id="addon-wrapping">Account:</span>
                                                <input type="text" class="form-control" aria-label="Account" aria-describedby="addon-wrapping" :value="getAccountName(paymentMode)" style="max-width: 200px;" disabled>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 hstack gap-1">
                                                    <div class="form-check form-switch" x-show="paymentMode.TypeSelect == paymentTypes.Integration">
                                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" x-model="paymentMode.ManualValidate" @@click="allowManualValidation(paymentMode)">
                                                        <br />
                                                        <label class="form-check-label" style="margin-left: -45px;">

                                                            Validate Manually
                                                        </label>
                                                    </div>


                                                    <div class="input-group flex-nowrap" style="margin-top: 15px;" x-show="paymentMode.TypeSelect == paymentTypes.Bank || paymentMode.TypeSelect == paymentTypes.Cash">
                                                        <span class="input-group-text" id="addon-wrapping">Amount</span>
                                                        <input type="number" class="form-control" aria-label="Amount" aria-describedby="addon-wrapping" x-model.number="paymentMode.Amount" @@keyup="updateTotals(paymentMode)">
                                                    </div>
                                                    <button style="margin-top: 15px;" class="btn" x-show="paymentMode.TypeSelect == paymentTypes.Cash" @@click="setPendingAmount(paymentMode)">
                                                        <i class="bi bi-hand-index-thumb"></i>
                                                        Set
                                                    </button>

                                                    <div class="input-group flex-nowrap" x-show="paymentMode.ShowReference ||  paymentMode.TypeSelect ==  paymentTypes.Bank || paymentMode.ManualValidate" style="margin-top: 15px;">
                                                        <span class="input-group-text" id="addon-wrapping">Reference</span>
                                                        <input type="text" class="form-control" aria-label="Reference" x-model="paymentMode.Reference" aria-describedby="addon-wrapping">
                                                    </div>
                                                    <button class="btn" x-show="paymentMode.TypeSelect == paymentTypes.Bank " @@click="updateOtherPayments(paymentMode,{ IsSelected : true})">
                                                        <i class="bi bi-plus-circle"></i>
                                                        <br />
                                                        Add
                                                    </button>

                                                    <button class="btn" x-show="paymentMode.TypeSelect == paymentTypes.Integration && paymentMode.PayList.length == 0" @@click="updatePaymentDetails(paymentMode,{ IsSelected : true})">
                                                        <i class="bi bi-cash"></i>
                                                        <br />
                                                        Validate
                                                    </button>
                                                </div>

                                            </div>


                                            <hr />
                                            <!--Bank table-->
                                            <table class="table table-bordered table-sm" x-show="paymentMode.TypeSelect == paymentTypes.Bank  || paymentMode.TypeSelect == paymentTypes.CreditNote">
                                                <thead style="color: white; background-color: #0073AA;">
                                                    <tr>
                                                        <th style="width: 20px; color: white; background-color: #0073AA;">#</th>
                                                        <th style="color: white; background-color: #0073AA;" x-show="paymentMode.ShowReference">Reference</th>
                                                        <th style="color: white; background-color: #0073AA;">Amount</th>
                                                        <th style="width: 30px; color: white; background-color: #0073AA;">##</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <template x-for="(pmode, idx) in paymentMode.PayList" :key="idx">
                                                        <tr>
                                                            <td x-text="idx + 1"></td>
                                                            <td scope="row" x-text="pmode.Reference" x-show="paymentMode.ShowReference"></td>
                                                            <td scope="row" x-text="getAmount(pmode.Amount)"></td>
                                                            <td>
                                                                <button class="btn" @@click="removeRowItem(paymentMode, idx)">
                                                                    <i class="bi bi-x-lg"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    </template>
                                                </tbody>
                                            </table>
                                            <!--End table-->
                                            <!--Discount Table -->
                                            <table class="table table-bordered table-sm" x-show="paymentMode.TypeSelect == paymentTypes.DiscountVoucher">
                                                <thead style="color: white; background-color: #0073AA;">
                                                    <tr>
                                                        <th style="width: 20px; color: white; background-color: #0073AA;">#</th>
                                                        <th style="width: 20px; color: white; background-color: #0073AA;">##</th>
                                                        <th style="color: white; background-color: #0073AA;">Voucher No</th>
                                                        <th style="color: white; background-color: #0073AA;">Amount</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <template x-for="(disc, idx) in discountVoucherList" :key="idx">
                                                        <tr>
                                                            <td x-text="idx + 1"></td>
                                                            <td>
                                                                <input type="checkbox" x-model="disc.IsSelected" @@change="addDiscountAmount(paymentMode,disc)" />
                                                            </td>
                                                            <td scope="row" x-text="disc.Reference"></td>
                                                            <td scope="row" x-text="getAmount(disc.Amount)"></td>

                                                        </tr>
                                                    </template>
                                                </tbody>
                                            </table>
                                            <!--End table-->
                                            <!--Online Payment -->
                                            <div style="width: 630px;height: 300px; overflow-y: scroll" x-show="paymentMode.TypeSelect == paymentTypes.Integration">


                                                <table class="table table-bordered table-sm" >
                                                    <thead style="color: white; background-color: #0073AA;">
                                                        <tr>
                                                            <th style="width: 20px; color: white; background-color: #0073AA;">#</th>
                                                            <th style="color: white; background-color: #0073AA; width: 250px;" >Reference</th>
                                                            <th style="color: white; background-color: #0073AA;">Time</th>
                                                            <th style="color: white; background-color: #0073AA;">Amount</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <template x-for="(onlinePay, idx) in paymentMode.PayList" :key="idx">
                                                            <tr>
                                                                <td x-text="idx + 1"></td>        
                                                                <td style="width: 250px;" scope="row" x-text="onlinePay.Reference" class="wrap"></td>
                                                                <td scope="row" x-text="new Date(onlinePay.TransactionTime).toLocaleString()"></td>
                                                                <td scope="row" x-text="formatNum(onlinePay.Amount)"></td>

                                                            </tr>
                                                        </template>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <!--End table-->
                                        </div>
                                    </div>
                                </template>
                            </div>
                        </div>
                   
                    </div>

                </div>
            </div>

        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/waitMe.min.js"></script>
    <script src="~/Scripts/FClient.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script defer src="~/Scripts/alpine.min.js"></script>
    <script src="~/Scripts/pos/focusposscreen.js?v=73759s9ssd7884j"></script>

</body>
</html>