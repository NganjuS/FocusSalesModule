@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS Screen</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/Content/select2.min.css" />
    <link rel="stylesheet" href="~/Content/print.min.css" />
    <link rel="stylesheet" href="~/Content/waitMe.min.css" />
    <link rel="stylesheet" href="~/Content/posscreen.css" />

</head>
<body id="full-container">
    <div class="main-container" id="main-container" x-data="posSystem()">
        <input x-ref="compid" value="@ViewBag.compid" type="hidden" />

        <!-- Main Content Section (2/3) - Left Side -->
        <div class="main-content-section">
            <!-- Success Alert -->
            <div x-show="showAlert" x-transition class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                <span x-text="alertMessage"></span>
                <button type="button" class="btn-close" @@click="showAlert = false"></button>
            </div>

            <!-- Top Bar -->
            <div class="top-bar">
                <!-- Transaction Fields - First Row -->
                <div class="header-section-2">
                    <div class="header-field">
                        <label>Doc No:</label>
                        <input type="text" x-model="posObj.DocNo" readonly>
                    </div>
                    <div class="header-field">
                        <label>Date:</label>
                        <input type="date" x-model="posObj.DocDate">
                    </div>
                    <div class="header-field">
                        <label>Outlet:</label>
                        <select id="outletSelect" x-model="posObj.OutletId" @@change="updateOutletDetails($event.target.selectedOptions[0])">
                            <option value="0">--Default--</option>
                            <template x-for="outlet in outletList" :key="outlet.Id">
                                <option :value="outlet.Id"
                                        :data-desc="outlet.Description"
                                        :data-address="outlet.Address"
                                        :data-email="outlet.Email"
                                        :data-phone="outlet.Phone" x-text="outlet.Name"></option>
                            </template>
                        </select>
                    </div>

                </div>

                <!-- Transaction Fields - Second Row -->
                <div class="header-section-2">
                    <div class="header-field">
                        <label>Cost Center:</label>
                        <select x-model="posObj.CostCenterId">
                            <option value="">Select Cost Center</option>
                            <template x-for="costCenter in costCenters" :key="costCenter.Id">
                                <option :value="costCenter.Id" x-text="costCenter.Name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="header-field">
                        <button class="btn btn-sm btn-primary" @@click="openAdvanceReceiptModal()">
                            <i class="bi bi-receipt me-1"></i>Advance Receipt
                        </button>
                    </div>
                    <div class="header-field">
                        <label>
                            <input type="checkbox" x-model="posObj.isCreditCustomer" @@change="handleCustomerTypeChange()" :disabled="isCreditCustomerReadOnly">
                            Credit Customer
                        </label>
                    </div>
                    <div class="header-field">
                        <label>Member:</label>
                        <select x-model="posObj.MemberId" @@change="updateCustomerAccount()">
                            <option value="">--Default--</option>
                            <template x-for="member in memberList" :key="member.Id">
                                <option :value="member.Id" x-text="member.Name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="header-field">
                        <button class="btn btn-sm btn-light" @@click="showAddMemberModal = true">
                            <i class="bi bi-person-plus me-1"></i>Add Member
                        </button>
                    </div>
                    <div class="header-field" x-show="posObj.isCreditCustomer">
                        <label>Customer A/C:</label>
                        <input type="text" x-model="posObj.customerAccount" readonly>
                    </div>
                </div>
            </div>

            <!-- Items Section -->
            <div class="items-section">
                <div class="table-container">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 4%;">#</th>
                                <th style="width: 12%;">Item Code</th>
                                <th style="width: 27%;">Item</th>
                                <th style="width: 8%;">Unit</th>
                                <th style="width: 8%;">Qty</th>
                                <th style="width: 10%;">Rate</th>
                                <th style="width: 10%;">Disc Amt</th>
                                <th style="width: 8%;">Disc %</th>
                                <th style="width: 10%;">Gross</th>
                                <th style="width: 3%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(item, index) in posObj.Items" :key="index">
                                <tr>
                                    <td x-text="index + 1"></td>
                                    <td>
                                        <span class="item-code-link" @@click="showRMAs(item.ItemId)" x-text="item.ItemCode"></span>
                                    </td>
                                    <td x-text="item.ItemName"></td>
                                    <td x-text="item.UnitName"></td>
                                    <td x-text="item.Qty"></td>
                                    <td x-text="formatCurrency(item.Price)"></td>
                                    <td x-text="formatCurrency(item.FixedDiscountAmt)"></td>
                                    <td x-text="item.DiscountPct + '%'"></td>
                                    <td x-text="formatCurrency(item.Gross)"></td>
                                    <td class="text-center">
                                        <button class="remove-btn" @@click="removeItem(index)" title="Remove item">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </td>
                                </tr>
                            </template>
                            <tr x-show="posObj.Items.length === 0">
                                <td colspan="10" class="text-center text-muted">No items added. Scan an RMA to add items.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Section (1/3) - Right Side -->
        <div class="sidebar-section">
            <!-- Branch and Cashier Information -->
            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.2); margin-bottom: 5px;">
                <div style="margin-bottom: 10px;">
                    <div class="hstack gap-1">
                        <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px;margin-top: 5px; margin-right:5px;">Status: </div>

                        <div x-text="posObj.DocStatusDesc" style="font-size: 24px; font-weight: 700; color: #ffffff; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                    </div>
                </div>
                <div style="margin-bottom: 10px;">
                    <div class="hstack gap-1">
                        <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px; margin-top: 5px; margin-right: 5px;">Branch Name: </div>

                        <div x-text="posObj.OutletName" style="font-size: 18px; font-weight: 700; color: #ffffff; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                    </div>
                </div>
                <div style="margin-bottom: 10px;">
                    <div class="hstack gap-1">
                        <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px; margin-top: 5px; margin-right: 5px;">Cashier Name: </div>
                        <div x-text="posObj.CashierName" style="font-size: 24px; font-weight: 700; color: #FFD700; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                    </div>
                </div>
                <div style="margin-bottom: 0;">
                    <div class="hstack gap-1">
                        <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px; margin-top: 5px; margin-right: 5px;">Address: </div>
                        <div x-text="posObj.OutletAddress" style="font-size: 16px; font-weight: 700; color: #00E676; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                    </div>
                </div>
            </div>

            <!-- RMA Search Field -->
            <div>
                <label class="search-label">Search RMA</label>
                <input type="text"
                       class="form-control search-input"
                       placeholder="Enter RMA number..."
                       x-model="rmaSearch"
                       @@keyup.enter="scanRMA()">
            </div>

            <!-- Action Buttons -->
            <div class="footer-buttons">
                <button class="btn btn-light" @@click="saveTransaction()">
                    <i class="bi bi-save me-2"></i>Save
                </button>
                <button class="btn btn-light" @@click="reprintTransaction()">
                    <i class="bi bi-printer me-2"></i>Reprint
                </button>
                <button class="btn btn-light" @@click="newTransaction()">
                    <i class="bi bi-plus-circle me-2"></i>New
                </button>
                <button class="btn btn-light" @@click="retrieveTransaction()">
                    <i class="bi bi-collection me-2"></i> Retrieve
                </button>
                @*<button class="btn btn-warning" @@click="holdTransaction()">
                    <i class="bi bi-pause-circle me-2"></i>Hold
                </button>*@
                <button class="btn btn-danger" @@click="cancelTransaction()">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
            </div>

            <!-- Totals Section -->
            <div class="totals-footer">
                <div class="footer-totals">
                    <div class="total-row">
                        <span>Subtotal:</span>
                        <span x-text="formatCurrency(subtotal)"></span>
                    </div>
                    <div class="total-row">
                        <span>Total Discount:</span>
                        <span x-text="formatCurrency(totalDiscount)"></span>
                    </div>
                    <div class="total-row">
                        <span>Tax:</span>
                        <span x-text="formatCurrency(tax)"></span>
                    </div>
                    <div class="total-row grand-total">
                        <span>GRAND TOTAL:</span>
                        <span x-text="formatCurrency(grandTotal)"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Member Modal -->
        <div class="modal" :class="{ 'show': showAddMemberModal }">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="showAddMemberModal = false">&times;</span>
                    <h3>Add New Member</h3>
                </div>
                <div style="margin-top: 15px;">
                    <div class="payment-form-group">
                        <label>Member Name</label>
                        <input type="text" x-model="newMemberName" placeholder="Enter member name">
                    </div>
                    <div class="payment-form-group">
                        <label>Phone Number</label>
                        <input type="tel" x-model="newMemberPhone" placeholder="Enter phone number">
                    </div>
                    <div x-show="memberError" class="error-message" x-text="memberError"></div>
                    <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                        <button class="btn btn-secondary" @@click="cancelAddMember()">Cancel</button>
                        <button class="btn btn-primary" @@click="addMember()">Add Member</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Advance Receipt Modal -->
        <div class="modal" :class="{ 'show': showAdvanceReceiptModal }" @@click.self="closeAdvanceReceiptModal()">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="closeAdvanceReceiptModal()">&times;</span>
                    <h3>Create Advance Receipt</h3>
                </div>
                <div style="margin-top: 15px;">
                    <div class="payment-form-group">
                        <label>Date</label>
                        <input type="date" x-model="advanceReceiptDate">
                    </div>               
                    <div class="payment-form-group">
                        <label>Cheque No</label>
                        <input type="text" x-model="advanceReceiptChequeNo" placeholder="Enter cheque number">
                    </div>
                  
                    <div class="payment-form-group">
                        <label>Amount</label>
                        <input type="number" x-model.number="advanceReceiptAmount" placeholder="Enter amount" step="0.01">
                    </div>
                    <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                        <button class="btn btn-secondary" @@click="closeAdvanceReceiptModal()">Cancel</button>
                        <button class="btn btn-primary" @@click="initSaveAdvanceReceipt()">Save Advance Receipt</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- RMA Modal -->
        <div class="modal" :class="{ 'show': showRMAModal }" @@click.self="showRMAModal = false">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="showRMAModal = false">&times;</span>
                    <h3>RMA Numbers </span></h3>
                </div>
                <ul class="rma-list">
                    <template x-for="rma in selectedItemRMAs" :key="rma">
                        <li x-text="rma"></li>
                    </template>
                </ul>
            </div>
        </div>
        <!-- Bill Settlement Modal -->
        <div class="modal settlement-modal" :class="{ 'show': showSettlementModal }">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="cancelSettlement()">&times;</span>
                    <h3>Bill Settlement</h3>
                </div>

                <!-- Modal Body with Left Sidebar -->
                <div class="settlement-modal-body">
                    <!-- Left Sidebar - Payment Modes -->
                    <div class="settlement-left-sidebar">
                        <div class="payment-tabs">
                            <template x-for="(pmode, index) in paymentModes" :key="index">
                                <button class="payment-tab" :class="{ 'active': activePaymentTab === pmode.PaymentType }" @@click="activePaymentTab = pmode.PaymentType" x-text="pmode.PaymentType"></button>
                            </template>
                        </div>
                    </div>

                    <!-- Main Content - Payment Forms -->
                    <div class="settlement-main-content">
                        <template x-for="(pmode, index) in paymentModes" :key="index">
                            <div class="payment-content" :class="{ 'active': activePaymentTab === pmode.PaymentType }">
                                <div class="payment-form-group" x-show="pmode.ShowBank">
                                    <label><span class="me-2"></span> Cash/Bank </label>
                                    <select @@change="setBankDetails(pmode, $event.target.value, $event.target.options[$event.target.selectedIndex].text)" >
                                        <option value=""> --cash/bank-- </option>
                                        <template x-for="bank in bankAccounts" :key="bank.Id">
                                            <option :value="bank.Id" x-text="bank.Name"></option>
                                        </template>
                                    </select>
                                </div>
                                <div class="payment-form-group" x-show="pmode.ShowReference">
                                    <label><span x-text="pmode.PaymentType" class="me-2"></span> Reference Number</label>
                                    <input type="text" x-model="pmode.Reference" placeholder="Enter reference number">
                                </div>
                                <div class="payment-form-group" x-show="!(pmode.TypeSelect == 3)">
                                    <label>Amount</label>
                                    <input type="number" x-model.number="pmode.Amount" @@input="calculatePayments(pmode)" placeholder="Enter amount" step="0.01">
                                </div>
                                <button x-show="pmode.TypeSelect == 2 || pmode.TypeSelect == 4 || pmode.TypeSelect == 5 " class="btn-add-payment" @@click="addPayment(pmode)">Add Payment</button>

                                <button x-show="pmode.TypeSelect == 3" class="btn-add-payment" @@click="loadExternalPayments(pmode)">Load Payments</button>

                                <table class="mb-3 bank-payments-table" x-show="(pmode.PayList.length > 0) || isDisplayLoading ">
                                    <thead>
                                        <tr>
                                         
                                            <th x-show="pmode.TypeSelect == 3">Terminal</th>
                                            <th x-show="pmode.TypeSelect == 3">Status</th>
                                            <th>Reference</th>
                                            <th>Account</th>
                                            <th>Amount</th>
                                            <th style="width:10px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <template x-for="(payment, index) in pmode.PayList" :key="index">
                                            <tr>
                                              
                                                <td x-show="pmode.TypeSelect == 3" x-text="payment.TerminalSerial"></td>
                                                <td x-show="pmode.TypeSelect == 3" x-text="payment.TransactionStatus"></td>
                                                <td x-text="payment.Reference"></td>
                                                <td x-text="payment.AccountName"></td>
                                                <td x-text="formatCurrency(payment.Amount)"></td>
                                                <td>
                                                    <button class="btn-remove-payment" @@click="removePayment(pmode,index)">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                                        </svg>
                                                    </button>
                                                </td>
                                            </tr>
                                        </template>
                                        <tr x-show="isDisplayLoading">
                                            <td colspan="7">Loading transactions ..</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- Footer Section -->
                <div class="settlement-footer">
                    <!-- Payment Summary -->
                    <div class="payment-summary">
                        <div class="payment-summary-row">
                            <span>Subtotal:</span>
                            <span x-text="formatCurrency(subtotal)"></span>
                        </div>
                        <div class="payment-summary-row">
                            <span>Tax:</span>
                            <span x-text="formatCurrency(tax)"></span>
                        </div>
                        <div class="payment-summary-row">
                            <span>Total Discount:</span>
                            <span x-text="formatCurrency(totalDiscount)"></span>
                        </div>
                        <div class="payment-summary-row total">
                            <span>TOTAL DUE:</span>
                            <span x-text="formatCurrency(grandTotal)"></span>
                        </div>
                        <div class="payment-summary-row outstanding" x-show="outstandingAmount > 0">
                            <span>Outstanding:</span>
                            <span x-text="formatCurrency(outstandingAmount)"></span>
                        </div>
                        <div class="payment-summary-row change" x-show="changeAmount > 0">
                            <span>Change:</span>
                            <span x-text="formatCurrency(changeAmount)"></span>
                        </div>
                    </div>

                    <!-- Settlement Actions -->
                    <div class="settlement-actions">
                        <button class="btn-cancel-settlement" @@click="cancelSettlement()">Cancel</button>
                        <button class="btn-complete-settlement" :disabled="!canCompleteSettlement" @@click="completeSettlement()">Complete Settlement</button>
                    </div>

                    <div x-show="settlementError" class="error-message" style="margin-top: 10px;" x-text="settlementError"></div>
                </div>
            </div>
        </div>

        <!-- End Bill Settlement Modal -->
        <!-- Retrieve Transaction Modal -->
        <div class="modal retrieve-modal" :class="{ 'show': showRetrieveModal }">
            <div class="modal-content retrieve-modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="closeRetrieveModal()">&times;</span>
                    <h3>Retrieve Transaction</h3>
                </div>

                <!-- Date Filter Row -->
                <div class="retrieve-date-row">
                    <div class="retrieve-date-field">
                        <label>Date From:</label>
                        <input type="date" x-model="retrieveDateFrom">
                    </div>
                    <div class="retrieve-date-field">
                        <label>Date To:</label>
                        <input type="date" x-model="retrieveDateTo">
                    </div>
                    <button @@click="showRetrievedData" class="btn btn-primary btn-search-transactions">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                </div>

                <!-- Transactions Table -->
                <div class="retrieve-table-container">
                    <table class="retrieve-transactions-table">
                        <thead>
                            <tr>
                                <th>Doc No</th>
                                <th>Doc Date</th>
                                <th>Customer</th>
                                <th>Outlet</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(transaction, index) in retrievedTransactions" :key="index">
                                <tr @@dblclick="handleTransactionDoubleClick(transaction)" class="transaction-row">
                                    <td x-text="transaction.DocNo"></td>
                                    <td x-text="formatDisplayDate(transaction.DocDate)"></td>
                                    <td x-text="transaction.CustomerName"></td>
                                    <td x-text="transaction.OutletName"></td>
                                    <td x-text="formatCurrency(transaction.Amount)"></td>
                                </tr>
                            </template>
                            <tr x-show="retrievedTransactions.length === 0">
                                <td colspan="5" class="text-center text-muted">No transactions found. Select date range and click Search.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Modal Actions -->
                <div class="retrieve-actions">
                    <button class="btn btn-secondary" @@click="closeRetrieveModal()">Close</button>
                </div>
            </div>
        </div>
    </div>

                <script src="~/Scripts/print.min.js"></script>
                <script src="~/Scripts/jquery-3.7.0.min.js"></script>
                <script src="~/Scripts/waitMe.min.js"></script>
                <script src="~/Scripts/FClient.js"></script>
                <script src="~/Scripts/select2.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
                <script defer src="~/Scripts/alpine.min.js"></script>
                <script src="~/Scripts/pos/posscreen.js?v=7376678ss89j"></script>

</body>
</html>