@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS Screen</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/Content/select2.min.css" />
    <link rel="stylesheet" href="~/Content/print.min.css" />
    <style>
        body {
            overflow: hidden;
            height: 100vh;
        }

        .main-container {
            height: 100vh;
            display: flex;
            flex-direction: row;
        }

        .top-bar {
            border-bottom: 2px solid #dee2e6;
            padding: 0px 10px;
            /*min-height: 80px;*/
        }

        .header-section-2 {
            display: flex;
            gap: 20px;
            align-items: center;
            flex-wrap: wrap;
            padding: 10px 0;
        }

        .header-field {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .header-field label {
                color: #333;
                font-weight: 600;
                font-size: 15px;
                margin: 0;
            }

            .header-field input,
            .header-field select {
                padding: 8px 12px;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                font-size: 14px;
                min-width: 160px;
            }

                .header-field input[type="checkbox"] {
                    min-width: auto;
                    width: 18px;
                    height: 18px;
                }

            .header-field .btn-sm {
                padding: 5px 15px;
                font-size: 14px;
            }

        .sidebar-section {
            width: 33.33%;
            padding: 20px;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            gap: 20px;
            border-left: 1px solid #dee2e6;
            height: 100vh;
            overflow-y: auto;
        }

        .main-content-section {
            width: 66.67%;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        .items-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .table-container {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
        }

        .table thead {
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .table thead th {
                background-color: #0073AA;
                color: white;
                font-weight: 600;
                border: none;
                padding: 12px 8px;
            }

        .table tbody td {
            padding: 10px 8px;
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .totals-footer {
            border-top: 2px solid #0073AA;
            padding: 15px;
            background-color: #fff;
            border-radius: 5px;
        }

        .footer-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            align-items: center;
            padding: 10px;
            background-color: #fff;
            border-radius: 5px;
        }

        .footer-totals {
            width: 100%;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            padding: 6px 0;
            font-size: 15px;
        }

            .total-row.grand-total {
                font-weight: bold;
                font-size: 18px;
                color: #0073AA;
                border-top: 2px solid #0073AA;
                padding-top: 10px;
                margin-top: 6px;
            }

        .action-footer {
            background-color: #0073AA;
            padding: 15px;
            display: flex;
            gap: 10px;
            justify-content: center;
        }

            .action-footer .btn {
                min-width: 100px;
                font-weight: 600;
                padding: 10px 20px;
                font-size: 14px;
            }

        .search-input {
            font-size: 18px;
            padding: 12px;
            border: 2px solid #0073AA;
        }

            .search-input:focus {
                border-color: #005a87;
                box-shadow: 0 0 0 0.25rem rgba(0, 115, 170, 0.25);
            }

        .search-label {
            font-weight: 600;
            color: #0073AA;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .alert-success {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
        }

        .item-code-link {
            color: #0073AA;
            cursor: pointer;
            text-decoration: underline;
        }

            .item-code-link:hover {
                color: #005a87;
            }

        .remove-btn {
            background: none;
            border: none;
            color: #dc3545;
            cursor: pointer;
            font-size: 18px;
            padding: 0;
        }

            .remove-btn:hover {
                color: #bb2d3b;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1060;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.4);
        }

            .modal.show {
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .modal-content {
            background-color: #fefefe;
            padding: 20px;
            border: 1px solid #888;
            width: 400px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .modal-header {
            border-bottom: 2px solid #0073AA;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

            .modal-header h3 {
                margin: 0;
                color: #0073AA;
            }

        .modal-close {
            float: right;
            font-size: 28px;
            font-weight: bold;
            color: #aaa;
            cursor: pointer;
            line-height: 20px;
        }

            .modal-close:hover {
                color: #000;
            }

        .rma-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .rma-list li {
                padding: 8px;
                border-bottom: 1px solid #dee2e6;
            }

                .rma-list li:last-child {
                    border-bottom: none;
                }

        /* Bill Settlement Modal */
        .settlement-modal .modal-content {
            width: 800px;
            max-width: 90vw;
            max-height: 90vh;
            overflow-y: auto;
        }

        /* Advance Receipt Modal */
        .modal:has(.modal-content:has(h3:contains("Advance Receipt"))) .modal-content {
            max-height: 90vh;
            overflow-y: auto;
            width: 500px;
        }

        .payment-tabs {
            display: flex;
            border-bottom: 2px solid #0073AA;
            margin-bottom: 20px;
        }

        .payment-tab {
            padding: 12px 24px;
            cursor: pointer;
            background: none;
            border: none;
            font-size: 16px;
            font-weight: 600;
            color: #666;
            transition: all 0.3s;
        }

            .payment-tab:hover {
                color: #0073AA;
            }

            .payment-tab.active {
                color: #0073AA;
                border-bottom: 3px solid #0073AA;
                margin-bottom: -2px;
            }

        .payment-content {
            display: none;
        }

            .payment-content.active {
                display: block;
            }

        .payment-summary {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .payment-summary-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            font-size: 16px;
        }

            .payment-summary-row.total {
                font-weight: bold;
                font-size: 20px;
                color: #0073AA;
                border-top: 2px solid #0073AA;
                padding-top: 12px;
                margin-top: 8px;
            }

            .payment-summary-row.outstanding {
                font-weight: bold;
                font-size: 18px;
                color: #dc3545;
            }

            .payment-summary-row.change {
                font-weight: bold;
                font-size: 18px;
                color: #28a745;
            }

        .payment-form-group {
            margin-bottom: 15px;
        }

            .payment-form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 5px;
                color: #333;
            }

            .payment-form-group input,
            .payment-form-group select {
                width: 100%;
                padding: 10px;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                font-size: 14px;
            }

                .payment-form-group input:focus,
                .payment-form-group select:focus {
                    outline: none;
                    border-color: #0073AA;
                    box-shadow: 0 0 0 0.2rem rgba(0, 115, 170, 0.25);
                }

        .bank-payments-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

            .bank-payments-table th,
            .bank-payments-table td {
                padding: 10px;
                text-align: left;
                border: 1px solid #dee2e6;
            }

            .bank-payments-table th {
                background-color: #f8f9fa;
                font-weight: 600;
            }

        .btn-add-payment {
            background-color: #28a745;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

            .btn-add-payment:hover {
                background-color: #218838;
            }

        .btn-remove-payment {
            background-color: #dc3545;
            color: white;
            padding: 4px 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
        }

            .btn-remove-payment:hover {
                background-color: #c82333;
            }

        .settlement-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #dee2e6;
        }

            .settlement-actions button {
                padding: 12px 32px;
                font-size: 16px;
                font-weight: 600;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

        .btn-complete-settlement {
            background-color: #28a745;
            color: white;
        }

            .btn-complete-settlement:hover {
                background-color: #218838;
            }

            .btn-complete-settlement:disabled {
                background-color: #6c757d;
                cursor: not-allowed;
            }

        .btn-cancel-settlement {
            background-color: #6c757d;
            color: white;
        }

            .btn-cancel-settlement:hover {
                background-color: #5a6268;
            }

        .error-message {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
        }

        .quick-cash-buttons {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin-top: 15px;
        }

        .quick-cash-btn {
            padding: 12px;
            background-color: #e9ecef;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
        }

            .quick-cash-btn:hover {
                background-color: #dee2e6;
            }

        .headers-style {
            color: white;
            font-weight: 900;
            padding: 10px;
        }

        /* Retrieve Modal Styles */
        .retrieve-modal .modal-content {
            width: 90vw;
            max-width: 1200px;
            max-height: 90vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .retrieve-modal-content {
            padding: 20px;
        }

        .retrieve-date-row {
            display: flex;
            gap: 15px;
            align-items: flex-end;
            margin: 20px 0;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }

        .retrieve-date-field {
            display: flex;
            flex-direction: column;
            gap: 5px;
            min-width: 180px;
        }

            .retrieve-date-field label {
                font-weight: 600;
                color: #333;
                font-size: 14px;
            }

            .retrieve-date-field input {
                padding: 10px;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                font-size: 14px;
            }

                .retrieve-date-field input:focus {
                    outline: none;
                    border-color: #0073AA;
                    box-shadow: 0 0 0 0.2rem rgba(0, 115, 170, 0.25);
                }

        .btn-search-transactions {
            padding: 10px 24px;
            background-color: #0073AA;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
        }

            .btn-search-transactions:hover {
                background-color: #005a87;
            }

        .retrieve-table-container {
            flex: 1;
            overflow-y: auto;
            max-height: 500px;
            border: 1px solid #dee2e6;
            border-radius: 4px;
        }

        .retrieve-transactions-table {
            width: 100%;
            border-collapse: collapse;
        }

            .retrieve-transactions-table thead {
                position: sticky;
                top: 0;
                z-index: 10;
                background-color: #0073AA;
            }

                .retrieve-transactions-table thead th {
                    background-color: #0073AA;
                    color: white;
                    padding: 12px;
                    text-align: left;
                    font-weight: 600;
                    border: none;
                }

            .retrieve-transactions-table tbody td {
                padding: 12px;
                border-bottom: 1px solid #dee2e6;
            }

            .retrieve-transactions-table .transaction-row {
                cursor: pointer;
                transition: background-color 0.2s;
            }

                .retrieve-transactions-table .transaction-row:hover {
                    background-color: #f8f9fa;
                }

        .retrieve-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 2px solid #dee2e6;
        }

            .retrieve-actions button {
                padding: 10px 24px;
                font-size: 14px;
                font-weight: 600;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

        .retrieve-actions .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

            .retrieve-actions .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="main-container" id="main-container" x-data="posSystem()">
        <input x-ref="compid" value="@ViewBag.compid" type="hidden" />

        <!-- Main Content Section (2/3) - Left Side -->
        <div class="main-content-section">
            <!-- Success Alert -->
            <div x-show="showAlert" x-transition class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                <span x-text="alertMessage"></span>
                <button type="button" class="btn-close" @@click="showAlert = false"></button>
            </div>

            <!-- Top Bar -->
            <div class="top-bar">
                <!-- Transaction Fields - First Row -->
                <div class="header-section-2">
                    <div class="header-field">
                        <label>Doc No:</label>
                        <input type="text" x-model="docNo" readonly>
                    </div>
                    <div class="header-field">
                        <label>Date:</label>
                        <input type="date" x-model="transactionDate">
                    </div>
                    <div class="header-field">
                        <label>Outlet:</label>
                        <select id="outletSelect" x-model="selectedOutlet">
                            <option value="0">Select Outlet</option>
                            <template x-for="outlet in outletList" :key="outlet.Id">
                                <option :value="outlet.Id" x-text="outlet.Name"></option>
                            </template>
                        </select>
                    </div>

                </div>

                <!-- Transaction Fields - Second Row -->
                <div class="header-section-2">
                    <div class="header-field">
                        <label>Cost Center:</label>
                        <select>
                            <option value="">Select Cost Center</option>
                            <template x-for="costCenter in costCenters" :key="costCenter.Id">
                                <option :value="costCenter.Id" x-text="costCenter.Name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="header-field">
                        <button class="btn btn-sm btn-primary" @@click="openAdvanceReceiptModal()">
                            <i class="bi bi-receipt me-1"></i>Advance Receipt
                        </button>
                    </div>
                    <div class="header-field">
                        <label>
                            <input type="checkbox" x-model="isCreditCustomer" @@change="handleCustomerTypeChange()" :disabled="isCreditCustomerReadOnly">
                            Credit Customer
                        </label>
                    </div>
                    <div class="header-field" x-show="isCreditCustomer">
                        <label>Member:</label>
                        <select x-model="selectedMember" @@change="updateCustomerAccount()">
                            <option value="">Select Member</option>
                            <template x-for="member in members" :key="member.id">
                                <option :value="member.id" x-text="member.name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="header-field" x-show="isCreditCustomer">
                        <button class="btn btn-sm btn-light" @@click="showAddMemberModal = true">
                            <i class="bi bi-person-plus me-1"></i>Add Member
                        </button>
                    </div>
                    <div class="header-field" x-show="isCreditCustomer">
                        <label>Customer A/C:</label>
                        <input type="text" x-model="customerAccount" readonly>
                    </div>
                </div>
            </div>

            <!-- Items Section -->
            <div class="items-section">
                <div class="table-container">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 4%;">#</th>
                                <th style="width: 12%;">Item Code</th>
                                <th style="width: 27%;">Item</th>
                                <th style="width: 8%;">Unit</th>
                                <th style="width: 8%;">Qty</th>
                                <th style="width: 10%;">Rate</th>
                                <th style="width: 10%;">Disc Amt</th>
                                <th style="width: 8%;">Disc %</th>
                                <th style="width: 10%;">Gross</th>
                                <th style="width: 3%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(item, index) in items" :key="index">
                                <tr>
                                    <td x-text="index + 1"></td>
                                    <td>
                                        <span class="item-code-link" @@click="showRMAs(item.Id)" x-text="item.Code"></span>
                                    </td>
                                    <td x-text="item.Name"></td>
                                    <td x-text="item.Unit"></td>
                                    <td x-text="item.Qty"></td>
                                    <td x-text="formatCurrency(item.Price)"></td>
                                    <td x-text="formatCurrency(item.FixedDiscountAmt)"></td>
                                    <td x-text="item.DiscountPct + '%'"></td>
                                    <td x-text="formatCurrency(item.Gross)"></td>
                                    <td class="text-center">
                                        <button class="remove-btn" @@click="removeItem(index)" title="Remove item">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </td>
                                </tr>
                            </template>
                            <tr x-show="items.length === 0">
                                <td colspan="10" class="text-center text-muted">No items added. Scan an RMA to add items.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Section (1/3) - Right Side -->
        <div class="sidebar-section">
            <!-- Branch and Cashier Information -->
            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.2); margin-bottom: 15px;">
                <div style="margin-bottom: 15px;">
                    <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Branch Name</div>
                    <div x-text="branchName" style="font-size: 24px; font-weight: 700; color: #ffffff; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                </div>
                <div style="margin-bottom: 15px;">
                    <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Cashier Name</div>
                    <div x-text="cashierName" style="font-size: 24px; font-weight: 700; color: #FFD700; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                </div>
                <div style="margin-bottom: 0;">
                    <div style="font-size: 14px; font-weight: 500; color: #f0f0f0; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">Phone Number</div>
                    <div x-text="cashierPhone" style="font-size: 24px; font-weight: 700; color: #00E676; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>
                </div>
            </div>

            <!-- RMA Search Field -->
            <div>
                <label class="search-label">Search RMA</label>
                <input type="text"
                       class="form-control search-input"
                       placeholder="Enter RMA number..."
                       x-model="rmaSearch"
                       @@keyup.enter="scanRMA()">
            </div>

            <!-- Action Buttons -->
            <div class="footer-buttons">
                <button class="btn btn-light" @@click="saveTransaction()">
                    <i class="bi bi-save me-2"></i>Save
                </button>
                <button class="btn btn-light" @@click="reprintTransaction()">
                    <i class="bi bi-printer me-2"></i>Reprint
                </button>
                <button class="btn btn-light" @@click="newTransaction()">
                    <i class="bi bi-plus-circle me-2"></i>New
                </button>
                <button class="btn btn-light" @@click="retrieveTransaction()">
                    <i class="bi bi-collection me-2"></i> Retrieve
                </button>
                @*<button class="btn btn-warning" @@click="holdTransaction()">
                        <i class="bi bi-pause-circle me-2"></i>Hold
                    </button>*@
                <button class="btn btn-danger" @@click="cancelTransaction()">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
            </div>

            <!-- Totals Section -->
            <div class="totals-footer">
                <div class="footer-totals">
                    <div class="total-row">
                        <span>Subtotal:</span>
                        <span x-text="formatCurrency(subtotal)"></span>
                    </div>
                    <div class="total-row">
                        <span>Total Discount:</span>
                        <span x-text="formatCurrency(totalDiscount)"></span>
                    </div>
                    <div class="total-row">
                        <span>Tax:</span>
                        <span x-text="formatCurrency(tax)"></span>
                    </div>
                    <div class="total-row grand-total">
                        <span>GRAND TOTAL:</span>
                        <span x-text="formatCurrency(grandTotal)"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Member Modal -->
        <div class="modal" :class="{ 'show': showAddMemberModal }" @@click.self="showAddMemberModal = false">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="showAddMemberModal = false">&times;</span>
                    <h3>Add New Member</h3>
                </div>
                <div style="margin-top: 15px;">
                    <div class="payment-form-group">
                        <label>Member Name</label>
                        <input type="text" x-model="newMemberName" placeholder="Enter member name">
                    </div>
                    <div class="payment-form-group">
                        <label>Phone Number</label>
                        <input type="tel" x-model="newMemberPhone" placeholder="Enter phone number">
                    </div>
                    <div x-show="memberError" class="error-message" x-text="memberError"></div>
                    <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                        <button class="btn btn-secondary" @@click="cancelAddMember()">Cancel</button>
                        <button class="btn btn-primary" @@click="addMember()">Add Member</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Advance Receipt Modal -->
        <div class="modal" :class="{ 'show': showAdvanceReceiptModal }" @@click.self="closeAdvanceReceiptModal()">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="closeAdvanceReceiptModal()">&times;</span>
                    <h3>Create Advance Receipt</h3>
                </div>
                <div style="margin-top: 15px;">
                    <div class="payment-form-group">
                        <label>Date</label>
                        <input type="date" x-model="advanceReceiptDate">
                    </div>
                    <div class="payment-form-group">
                        <label>Cash/Bank Account</label>
                        <input type="text" x-model="advanceReceiptCashBankAccount" placeholder="Enter cash/bank account">
                    </div>
                    <div class="payment-form-group">
                        <label>Outlet</label>
                        <select x-model="advanceReceiptOutlet">
                            <option value="">Select Outlet</option>
                            <template x-for="outlet in outletList" :key="outlet.Id">
                                <option :value="outlet.Id" x-text="outlet.Name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="payment-form-group">
                        <label>Cost Center</label>
                        <select x-model="advanceReceiptCostCenter">
                            <option value="">Select Cost Center</option>
                            <template x-for="costCenter in costCenters" :key="costCenter.Id">
                                <option :value="costCenter.Id" x-text="costCenter.Name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="payment-form-group">
                        <label>Member</label>
                        <select x-model="advanceReceiptMember">
                            <option value="">Select Member</option>
                            <template x-for="member in members" :key="member.id">
                                <option :value="member.id" x-text="member.name"></option>
                            </template>
                        </select>
                    </div>
                    <div class="payment-form-group">
                        <label>Cheque No</label>
                        <input type="text" x-model="advanceReceiptChequeNo" placeholder="Enter cheque number">
                    </div>
                    <div class="payment-form-group">
                        <label>Customer A/C</label>
                        <input type="text" x-model="advanceReceiptCustomerAcc" placeholder="Enter customer account">
                    </div>
                    <div class="payment-form-group">
                        <label>Amount</label>
                        <input type="number" x-model.number="advanceReceiptAmount" placeholder="Enter amount" step="0.01">
                    </div>
                    <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                        <button class="btn btn-secondary" @@click="closeAdvanceReceiptModal()">Cancel</button>
                        <button class="btn btn-primary" @@click="saveAdvanceReceipt()">Save Advance Receipt</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- RMA Modal -->
        <div class="modal" :class="{ 'show': showRMAModal }" @@click.self="showRMAModal = false">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="showRMAModal = false">&times;</span>
                    <h3>RMA Numbers </span></h3>
                </div>
                <ul class="rma-list">
                    <template x-for="rma in selectedItemRMAs" :key="rma">
                        <li x-text="rma"></li>
                    </template>
                </ul>
            </div>
        </div>

        <!-- Bill Settlement Modal -->
        <div class="modal settlement-modal" :class="{ 'show': showSettlementModal }">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="cancelSettlement()">&times;</span>
                    <h3>Bill Settlement</h3>
                </div>

                <!-- Payment Summary -->
                <div class="payment-summary">
                    <div class="payment-summary-row">
                        <span>Subtotal:</span>
                        <span x-text="formatCurrency(subtotal)"></span>
                    </div>
                    <div class="payment-summary-row">
                        <span>Tax:</span>
                        <span x-text="formatCurrency(tax)"></span>
                    </div>
                    <div class="payment-summary-row">
                        <span>Total Discount:</span>
                        <span x-text="formatCurrency(totalDiscount)"></span>
                    </div>
                    <div class="payment-summary-row total">
                        <span>TOTAL DUE:</span>
                        <span x-text="formatCurrency(grandTotal)"></span>
                    </div>
                    <div class="payment-summary-row outstanding" x-show="outstandingAmount > 0">
                        <span>Outstanding:</span>
                        <span x-text="formatCurrency(outstandingAmount)"></span>
                    </div>
                    <div class="payment-summary-row change" x-show="changeAmount > 0">
                        <span>Change:</span>
                        <span x-text="formatCurrency(changeAmount)"></span>
                    </div>
                </div>

                <!-- Payment Tabs -->
                <div class="payment-tabs">
                    <button class="payment-tab" :class="{ 'active': activePaymentTab === 'cash' }" @@click="activePaymentTab = 'cash'">Cash</button>
                    <button class="payment-tab" :class="{ 'active': activePaymentTab === 'bank' }" @@click="activePaymentTab = 'bank'">Bank Payments</button>
                    <button class="payment-tab" :class="{ 'active': activePaymentTab === 'voucher' }" @@click="activePaymentTab = 'voucher'">Discount Voucher</button>
                    <button class="payment-tab" :class="{ 'active': activePaymentTab === 'credit' }" @@click="activePaymentTab = 'credit'">Credit Note</button>
                    <button class="payment-tab" :class="{ 'active': activePaymentTab === 'monie' }" @@click="activePaymentTab = 'monie'">Monie</button>
                </div>

                <!-- Cash Payment -->
                <div class="payment-content" :class="{ 'active': activePaymentTab === 'cash' }">
                    <div class="payment-form-group">
                        <label>Cash Amount Received</label>
                        <input type="number" x-model.number="cashAmount" @@input="calculatePayments()" placeholder="Enter amount" step="0.01">
                    </div>
                    <div class="quick-cash-buttons">
                        <button class="quick-cash-btn" @@click="cashAmount = grandTotal; calculatePayments()">Exact Amount</button>
                        <button class="quick-cash-btn" @@click="cashAmount = Math.ceil(grandTotal / 100) * 100; calculatePayments()">Round Up 100</button>
                        <button class="quick-cash-btn" @@click="cashAmount = Math.ceil(grandTotal / 500) * 500; calculatePayments()">Round Up 500</button>
                        <button class="quick-cash-btn" @@click="cashAmount = Math.ceil(grandTotal / 1000) * 1000; calculatePayments()">Round Up 1000</button>
                        <button class="quick-cash-btn" @@click="cashAmount = 5000; calculatePayments()">5,000</button>
                        <button class="quick-cash-btn" @@click="cashAmount = 10000; calculatePayments()">10,000</button>
                    </div>
                </div>

                <!-- Bank Payments -->
                <div class="payment-content" :class="{ 'active': activePaymentTab === 'bank' }">
                    <div class="payment-form-group">
                        <label>Bank/Payment Method</label>
                        <select x-model="newBankPayment.method">
                            <option value="">Select payment method</option>
                            <option value="Card">Credit/Debit Card</option>
                            <option value="Bank Transfer">Bank Transfer</option>
                            <option value="Cheque">Cheque</option>
                        </select>
                    </div>
                    <div class="payment-form-group">
                        <label>Reference Number</label>
                        <input type="text" x-model="newBankPayment.reference" placeholder="Enter reference number">
                    </div>
                    <div class="payment-form-group">
                        <label>Amount</label>
                        <input type="number" x-model.number="newBankPayment.amount" placeholder="Enter amount" step="0.01">
                    </div>
                    <button class="btn-add-payment" @@click="addBankPayment()">Add Payment</button>

                    <table class="bank-payments-table" x-show="bankPayments.length > 0">
                        <thead>
                            <tr>
                                <th>Method</th>
                                <th>Reference</th>
                                <th>Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(payment, index) in bankPayments" :key="index">
                                <tr>
                                    <td x-text="payment.method"></td>
                                    <td x-text="payment.reference"></td>
                                    <td x-text="formatCurrency(payment.amount)"></td>
                                    <td>
                                        <button class="btn-remove-payment" @@click="removeBankPayment(index)">Remove</button>
                                    </td>
                                </tr>
                            </template>
                        </tbody>
                    </table>
                </div>

                <!-- Discount Voucher -->
                <div class="payment-content" :class="{ 'active': activePaymentTab === 'voucher' }">
                    <div class="payment-form-group">
                        <label>Voucher Code</label>
                        <input type="text" x-model="voucherCode" placeholder="Enter voucher code" :disabled="voucherApplied">
                    </div>
                    <button class="btn-add-payment" @@click="applyVoucher()" :disabled="voucherApplied">
                        <i class="bi bi-check-circle me-2"></i>Validate & Apply Voucher
                    </button>
                    <div x-show="voucherApplied" style="margin-top: 15px; padding: 15px; background-color: #d4edda; border-radius: 4px; border: 1px solid #c3e6cb;">
                        <div style="color: #155724; font-weight: 600; margin-bottom: 5px;">
                            <i class="bi bi-check-circle-fill me-2"></i>Voucher Applied Successfully!
                        </div>
                        <div style="color: #155724;">
                            <strong>Code:</strong> <span x-text="voucherCode"></span><br>
                            <strong>Discount Amount:</strong> <span x-text="formatCurrency(voucherAmount)"></span><br>
                            <strong>Applied to Item:</strong> <span x-text="voucherItemCode"></span>
                        </div>
                    </div>
                </div>

                <!-- Credit Note -->
                <div class="payment-content" :class="{ 'active': activePaymentTab === 'credit' }">
                    <div class="payment-form-group">
                        <label>Credit Note Number</label>
                        <input type="text" x-model="creditNoteNumber" placeholder="Enter credit note number">
                    </div>
                    <div class="payment-form-group">
                        <label>Credit Note Amount</label>
                        <input type="number" x-model.number="creditNoteAmount" @@input="calculatePayments()" placeholder="Enter credit note amount" step="0.01">
                    </div>
                    <button class="btn-add-payment" @@click="applyCreditNote()">Apply Credit Note</button>
                    <div x-show="creditNoteApplied" style="margin-top: 10px; color: #28a745; font-weight: 600;">
                        Credit Note applied: <span x-text="formatCurrency(creditNoteAmount)"></span>
                    </div>
                </div>

                <!-- Monie -->
                <div class="payment-content" :class="{ 'active': activePaymentTab === 'monie' }">
                    <div class="payment-form-group">
                        <label>Reference Number</label>
                        <input type="text" x-model="newMoniePayment.reference" placeholder="Enter reference number">
                    </div>
                    <div class="payment-form-group">
                        <label>Amount</label>
                        <input type="number" x-model.number="newMoniePayment.amount" placeholder="Enter amount" step="0.01">
                    </div>
                    <button class="btn-add-payment" @@click="addMonie()">Add Payment</button>

                    <table class="bank-payments-table" x-show="bankPayments.length > 0">
                        <thead>
                            <tr>
                                <th>Reference</th>
                                <th>Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="(payment, index) in moniePayments" :key="index">
                                <tr>
                                    <td x-text="payment.reference"></td>
                                    <td x-text="formatCurrency(payment.amount)"></td>
                                    <td>
                                        <button class="btn-remove-payment" @@click="removeMoniePayment(index)">Remove</button>
                                    </td>
                                </tr>
                            </template>
                        </tbody>
                    </table>
                </div>

                <!-- Settlement Actions -->
                <div class="settlement-actions">
                    <button class="btn-cancel-settlement" @@click="cancelSettlement()">Cancel</button>
                    <button class="btn-complete-settlement" :disabled="!canCompleteSettlement" @@click="completeSettlement()">Complete Settlement</button>
                </div>

                <div x-show="settlementError" class="error-message" style="margin-top: 10px;" x-text="settlementError"></div>
            </div>
        </div>

        <!-- Retrieve Transaction Modal -->
        <div class="modal retrieve-modal" :class="{ 'show': showRetrieveModal }">
            <div class="modal-content retrieve-modal-content">
                <div class="modal-header">
                    <span class="modal-close" @@click="closeRetrieveModal()">&times;</span>
                    <h3>Retrieve Transaction</h3>
                </div>

                <!-- Date Filter Row -->
                <div class="retrieve-date-row">
                    <div class="retrieve-date-field">
                        <label>Date From:</label>
                        <input type="date" x-model="retrieveDateFrom">
                    </div>
                    <div class="retrieve-date-field">
                        <label>Date To:</label>
                        <input type="date" x-model="retrieveDateTo">
                    </div>
                    <button class="btn btn-primary btn-search-transactions">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                </div>

                <!-- Transactions Table -->
                <div class="retrieve-table-container">
                    <table class="retrieve-transactions-table">
                        <thead>
                            <tr>
                                <th>Doc No</th>
                                <th>Doc Date</th>
                                <th>Customer</th>
                                <th>Outlet</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <template x-for="transaction in retrievedTransactions" :key="transaction.docNo">
                                <tr @@dblclick="handleTransactionDoubleClick(transaction)" class="transaction-row">
                                    <td x-text="transaction.docNo"></td>
                                    <td x-text="transaction.docDate"></td>
                                    <td x-text="transaction.customer"></td>
                                    <td x-text="transaction.outlet"></td>
                                    <td x-text="formatCurrency(transaction.amount)"></td>
                                </tr>
                            </template>
                            <tr x-show="retrievedTransactions.length === 0">
                                <td colspan="5" class="text-center text-muted">No transactions found. Select date range and click Search.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Modal Actions -->
                <div class="retrieve-actions">
                    <button class="btn btn-secondary" @@click="closeRetrieveModal()">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/print.min.js"></script>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/FClient.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script defer src="~/Scripts/alpine.min.js"></script>
    <script src="~/Scripts/pos/posscreen.js?v=7799ss999s9ddxc3j"></script>
</body>
</html>